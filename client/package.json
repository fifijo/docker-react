{
  "name": "docker-react",
  "version": "1.0.1",
  "description": "Docker React boilerplate",
  "author": "fifijo - Krzysztof Perzanowski",
  "license": "MIT",
  "main": "index.js",
  "keywords": [
    "react",
    "react",
    "reactjs",
    "docker",
    "boilerplate"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fifijo/docker-react.git"
  },
  "scripts": {
    "build": "npm-run-all build:webpack",
    "build:webpack": "webpack --config ./config/webpack/webpack.prod.js",
    "start": "npm-run-all server:development",
    "server:development": "webpack serve --config ./config/webpack/webpack.dev.js",
    "prepare": "husky install",
    "format:src": "prettier --write {,src/**/}*.js",
    "pretty-quick": "pretty-quick --staged",
    "lint": "eslint --fix -- ./src "
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-dynamic-import": "^2.1.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "html-webpack-plugin": "5.4.0",
    "husky": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
