{
    "name": "docker-frontend-app-web",
    "version": "1.0.0",
    "description": "Frontend application - web",
    "author": "fifijo - Krzysztof Perzanowski",
    "license": "MIT",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/fifijo/docker-frontend.git"
    },
    "scripts": {
        "build": "npm-run-all build:webpack",
        "build:webpack": "webpack --config ./config/webpack/webpack.prod.js",
        "start": "npm-run-all server:development",
        "server:development": "webpack serve --config ./config/webpack/webpack.dev.js"
    },
    "dependencies": {
        "react": "17.0.1",
        "react-dom": "17.0.1"
    },
    "devDependencies": {
        "webpack": "^5.21.1",
        "webpack-cli": "^4.5.0",
        "webpack-merge": "^5.7.3",
        "@babel/core": "^7.12.13",
        "@babel/plugin-proposal-class-properties": "^7.12.13",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.12.15",
        "@babel/preset-env": "^7.12.13",
        "@babel/preset-react": "^7.12.13",
        "babel-loader": "^8.2.2",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-transform-dynamic-import": "^2.1.0",
        "babel-plugin-transform-imports": "^2.0.0",
        "html-webpack-plugin": "^5.0.0",
        "npm-run-all": "^4.1.5",
        "clean-webpack-plugin": "^3.0.0",
        "webpack-dev-server": "^3.11.2"
    },
    "browserslist": {
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/react"
        ],
        "plugins": [
            [
                "module-resolver",
                {
                    "root": [
                        "./src"
                    ]
                }
            ],
            "@babel/plugin-syntax-dynamic-import",
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-transform-runtime"
        ]
    }
}
